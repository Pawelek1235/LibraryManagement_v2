@page "{id:int}"
@model LibraryManagement.UI.Pages.Admin.Books.EditModel


<h1>@(Model.Book.Id == 0 ? "Dodaj książkę" : "Edytuj książkę")</h1>

<form method="post">
    <input type="hidden" asp-for="Book.Id" />

    <div class="mb-3">
        <label asp-for="Book.Title" class="form-label">Tytuł</label>
        <input asp-for="Book.Title" class="form-control" />
        <span asp-validation-for="Book.Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Book.Isbn" class="form-label">ISBN</label>
        <input asp-for="Book.Isbn" class="form-control" />
        <span asp-validation-for="Book.Isbn" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Book.AuthorId" class="form-label">Autor</label>
        <select asp-for="Book.AuthorId" class="form-select">
            <option value="">-- wybierz autora --</option>
            @foreach (var a in Model.Authors)
            {
                <option value="@a.Id" selected="@(a.Id == Model.Book.AuthorId)">
                    @a.FullName
                </option>
            }
        </select>
        <span asp-validation-for="Book.AuthorId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Zapisz</button>
    <a asp-page="./Index" class="btn btn-secondary ms-2">Anuluj</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
