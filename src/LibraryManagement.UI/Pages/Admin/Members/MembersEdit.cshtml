@page "{id?}"
@model LibraryManagement.UI.Pages.Admin.Members.MembersEditModel

@{
    bool isNew = Model.Member.Id == 0;
    ViewData["Title"] = isNew ? "Dodaj członka" : "Edytuj członka";
}

<h2>@ViewData["Title"]</h2>

<form method="post">
    <input type="hidden" asp-for="Member.Id" />

    <div class="form-group">
        <label asp-for="Member.FullName"></label>
        <input asp-for="Member.FullName" class="form-control" />
        <span asp-validation-for="Member.FullName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Member.Email"></label>
        <input asp-for="Member.Email" class="form-control" />
        <span asp-validation-for="Member.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Member.MembershipDate"></label>
        <input asp-for="Member.MembershipDate" type="date" class="form-control" />
        <span asp-validation-for="Member.MembershipDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Zapisz</button>
    <a asp-page="Index" class="btn btn-secondary">Anuluj</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
